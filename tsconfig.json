{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "paths": {
            "src/*": [
                "./src/*"
            ]
        },
        "skipLibCheck": true,
        "stripInternal": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitThis": false
    },
    "include": [
        "./src/**/*"
    ]
}
